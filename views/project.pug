extends layout

block content
  if project
    article(class="grid lg:grid-cols-3 gap-8")
      div(class="lg:col-span-2")
        h1(class="text-3xl font-bold mb-2")= project.project_name

        if project.description
          p(class="text-gray-700 dark:text-gray-200 mb-4")= project.description
        if project.live_link
          a(href=project.live_link, target="_blank", class="inline-block px-5 py-3 rounded-xl border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800 mr-3") Live Demo
        if project.github_link
          a(href=project.github_link, target="_blank", class="inline-block px-5 py-3 rounded-xl border border-gray-300 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-800") Source Code

        if Array.isArray(project.image_url)
          each imgPath in project.image_url
            img(src='/' + imgPath, alt=project.project_name, class="w-full rounded-2xl mb-6")
        else if project.image_url
          img(src='/' + project.image_url, alt=project.project_name, class="w-full rounded-2xl mb-6")

      .space-y-4
        h2(class="text-xl font-semibold") Details
        if project.technologies
          p Strong stack:
          ul(class="list-disc list-inside")
            each tech in project.technologies
              li= tech
        if project.role
          p
            b Role:
            |  #{project.role}
  else
    p Project not found.
